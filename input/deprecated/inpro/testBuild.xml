<?xml version="1.0"?>
<!-- 1 SourceFacility FrontEnd, 1 SinkFacility BackEnd, and 1 GreedyMarket -->
<simulation>
  <duration>10</duration>
  <startmonth>1</startmonth>
  <startyear>2000</startyear>
  <decay>0</decay>

    <commodity>
        <name>uo2</name>
    </commodity>

  <market>
    <name>uo2market</name>
    <mktcommodity>uo2</mktcommodity>
    <agent>
      <GreedyMarket/>
    </agent>
  </market>

  <facility>
    <name>FrontEnd</name>
    <agent>
      <SourceFacility>
        <outcommodity>uo2</outcommodity>
        <capacity>2</capacity>
        <inventorysize>1e4</inventorysize>
        <commodprice>0</commodprice>
        <recipe>fresh_50gwd</recipe>
      </SourceFacility>
    </agent>
  </facility>

  <facility>
    <name>BackEnd</name>
    <agent>
      <SinkFacility>
        <incommodity>uo2</incommodity>
        <capacity>1</capacity>
        <inventorysize>1e4</inventorysize>
        <commodprice>0</commodprice>
      </SinkFacility>
    </agent>
  </facility>

  <facility>
    <name>Storage</name>
    <agent>
      <StorageFacility>
        <incommodity>uo2</incommodity>
        <capacity>1</capacity>
        <inventorysize>1e4</inventorysize>
        <residencetime>100</residencetime>
	<initialstocks/>
      </StorageFacility>
    </agent>
  </facility>
  
  <region>
    <name>oneRegion</name>
    <allowedfacility>FrontEnd</allowedfacility>
    <allowedfacility>BackEnd</allowedfacility>
    <allowedfacility>Storage</allowedfacility>
    <agent>
      <BuildRegion>
        <input_file>/filespace/people/g/gidden/work/cyclus/trunk/input/inpro/build.in</input_file>
      </BuildRegion>
    </agent>
    <institution>
      <name>oneInst</name>
      <agent>
        <BuildInst>
          <facility>
            <type>FrontEnd</type>
            <name>FrontEnd</name>
          </facility>
          <facility>
            <type>BackEnd</type>
            <name>BackEnd</name>
          </facility>
          <facility>
            <type>Storage</type>
            <name>Storage</name>
          </facility>
        </BuildInst>
      </agent>
    </institution>
  </region>
  
  <recipe>
    <name>fresh_50gwd</name>
    <basis>mass</basis>
    <unit>assembly</unit>
    <total>1000</total>
    
    
    <isotope>
      <id>92235</id>
      <comp>0.05</comp>
    </isotope>
    <isotope>
      <id>92238</id>
      <comp>0.95</comp>
    </isotope>
    <isotope>
      <id>08016</id>
      <comp>0.13</comp>
    </isotope>

  </recipe>

</simulation>
