<?xml version="1.0"?>
<!-- 1 SourceFacility Source, 1 SinkFacility Sink -->

<simulation>
  
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>2</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <market>
    <name>commodity_market</name>
    <mktcommodity>commodity</mktcommodity>
    <agent>
      <NullMarket/>
    </agent>
  </market>

  <facility>
    <name>Source</name>
    <outcommodity>commodity</outcommodity>
    <agent>
      <SourceFacility>
	<output>
	  <outcommodity>commodity</outcommodity>
	  <outputcapacity>1</outputcapacity>
	  <recipe>commod_recipe</recipe>
	</output>
      </SourceFacility>
    </agent>
  </facility>
  
  <facility>
    <name>Sink</name>
    <incommodity>commodity</incommodity>
    <agent>
      <SourceFacility>
	<input>
	  <incommodity>commodity</incommodity>
	  <inputcapacity>1</inputcapacity>
	</input>
      </SourceFacility>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Sink</allowedfacility>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>Source</availableprototype>
      <availableprototype>Sink</availableprototype>
      <initialfacilitylist>
	<prototype>Source</prototype>
	<number>1</number>
      </initialfacilitylist>
      <initialfacilitylist>
	<prototype>Sink</prototype>
	<number>1</number>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <total>1</total>
    <isotope>
      <id>01001</id>
      <comp>1</comp>
    </isotope>
  </recipe>

</simulation>
