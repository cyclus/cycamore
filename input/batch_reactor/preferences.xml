<?xml version="1.0"?>
<!-- This input file tests the batch reactor's preference setting. The source 
facility provides 1 unit of commodity each time period. If the batch reactor 
is not in process, it will request one unit of commodity and trump the sink 
facility. Otherwise, the sink facility should procure all other units of 
commodity. -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>2</decay>
  </control>

  <commodity>
    <name>used_commodity</name>
  </commodity>

  <commodity>
    <name>processed_commodity</name>
  </commodity>

  <facility>
    <name>Source</name>
    <module>
      <lib>cycamore</lib>
      <agent>Source</agent>
    </module>
    <agent>
      <Source>
        <out_commod>used_commodity</out_commod>
        <capacity>1</capacity>
        <recipe_name>commod_recipe</recipe_name>
      </Source>
    </agent>
  </facility>
  
  <facility>
    <name>Reactor</name>
    <module>
      <lib>cycamore</lib>
      <agent>BatchReactor</agent>
    </module>
    <agent>
      <BatchReactor>
        <fuel>
          <incommodity>used_commodity</incommodity>
          <inrecipe>commod_recipe</inrecipe>
          <outcommodity>processed_commodity</outcommodity>
          <outrecipe>commod_recipe</outrecipe>
        </fuel>
        <processtime>1</processtime>
        <nbatches>1</nbatches>
        <batchsize>1</batchsize>
        <commodity_production>
          <commodity>power</commodity>
          <capacity>10</capacity>
          <cost>10</cost>
        </commodity_production>
        <commod_pref>
          <incommodity>used_commodity</incommodity>
          <preference>1.0</preference>
        </commod_pref>
      </BatchReactor>
    </agent>
  </facility>

  <facility>
    <name>Sink</name>
    <module>
      <lib>cycamore</lib>
      <agent>Sink</agent>
    </module>
    <agent>
      <Sink>
        <in_commods>
          <val>used_commodity</val>
          <val>processed_commodity</val>
        </in_commods>
        <capacity>2</capacity>
      </Sink>
    </agent>
  </facility>

  <region>
    <name>SingleRegion</name>
    <module>
      <lib>agents</lib>
      <agent>NullRegion</agent>
    </module>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Reactor</allowedfacility>
    <allowedfacility>Sink</allowedfacility>
    <agent><NullRegion/></agent>
    <institution>
      <name>SingleInstitution</name>
      <module>
        <lib>agents</lib>
        <agent>NullInst</agent>
      </module>
      <availableprototype>Source</availableprototype>
      <availableprototype>Reactor</availableprototype>
      <availableprototype>Sink</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Reactor</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent><NullInst/></agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>
