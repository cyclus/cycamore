<?xml version="1.0"?>
<!-- 1 SourceFacility Source, 1 SinkFacility Sink -->

<simulation>
  <control>
    <duration>12</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <simstart>0</simstart>
    <decay>2</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <market>
    <name>incommodity_market</name>
    <mktcommodity>incommodity</mktcommodity>
    <model>
      <NullMarket/>
    </model>
  </market>

  <market>
    <name>outcommodity_market</name>
    <mktcommodity>outcommodity</mktcommodity>
    <model>
      <NullMarket/>
    </model>
  </market>

  <facility>
    <name>Source</name>
    <model>
      <SourceFacility>
	<output>
	  <outcommodity>incommodity</outcommodity>
	  <output_capacity>2</output_capacity>
	  <recipe>commod_recipe</recipe>
	</output>
      </SourceFacility>
    </model>
    <outcommodity>incommodity</outcommodity>
  </facility>

  <facility>
    <name>Reactor</name>
    <model>
      <BatchReactor>
        <fuel_input>
         <incommodity>incommodity</incommodity>
         <inrecipe>commod_recipe</inrecipe>
       </fuel_input>
        <fuel_output>
         <outcommodity>outcommodity</outcommodity>
         <outrecipe>commod_recipe</outrecipe>
       </fuel_output>
	<cyclelength>1</cyclelength>
	<incoreloading>2</incoreloading>
	<outcoreloading>1</outcoreloading>
	<batchespercore>1</batchespercore>
        <commodity_production>
          <commodity>power</commodity>
          <capacity>10</capacity>
          <cost>10</cost>
        </commodity_production>
      </BatchReactor>
    </model>
    <incommodity>incommodity</incommodity>
    <outcommodity>outcommodity</outcommodity>
  </facility>
  
  <facility>
    <name>Sink</name>
    <model>
      <SinkFacility>
	<input>
	  <commodities>
	    <incommodity>outcommodity</incommodity>
	  </commodities>
	  <input_capacity>2</input_capacity>
	</input>
      </SinkFacility>
    </model>
    <incommodity>outcommodity</incommodity>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Reactor</allowedfacility>
    <allowedfacility>Sink</allowedfacility>
    <model>
      <GrowthRegion>
        <commodity>
          <name>power</name>
          <demand>
            <type>linear</type>
            <parameters>0 10</parameters>
          </demand>
        </commodity>
      </GrowthRegion>
    </model>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>Source</availableprototype>
      <availableprototype>Reactor</availableprototype>
      <availableprototype>Sink</availableprototype>
      <initialfacilitylist>
	<entry>
	  <prototype>Source</prototype>
	  <number>1</number>
	</entry>
	<entry>
	  <prototype>Sink</prototype>
	  <number>1</number>
	</entry>
      </initialfacilitylist>
      <model>
        <ManagerInst/>
      </model>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <isotope>
      <id>01001</id>
      <comp>1</comp>
    </isotope>
  </recipe>

</simulation>