    <nuclide> <id>080160000</id> <comp>0.13</comp> </nuclide>
  </recipe>

  <recipe>
    <name>mox_used_fuel_recipe</name>
    <basis>mass</basis>
    <nuclide> <id>922350000</id> <comp>0.01</comp> </nuclide>
