<!-- 2 Sources 3 Reactors -->

<simulation>
  <control>
    <duration>5</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
  </control>

  <archetypes>
    <spec>
      <lib>cycamore</lib>
      <name>Source</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>BatchReactor</name>
    </spec>
    <spec>
      <lib>agents</lib>
      <name>NullRegion</name>
    </spec>
    <spec>
      <lib>cycamore</lib>
      <name>DeployInst</name>
    </spec>
  </archetypes>

  <facility>
    <name>UOX_Source</name>
    <config>
      <Source>
        <out_commod>uox</out_commod>
        <recipe_name>uox_fuel_recipe</recipe_name>
        <capacity>2.5</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>MOX_Source</name>
    <config>
      <Source>
        <out_commod>mox</out_commod>
        <recipe_name>mox_fuel_recipe</recipe_name>
        <capacity>2.5</capacity>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Reactor1</name>
    <config>
      <BatchReactor>
        <fuel>
          <incommodity>uox</incommodity>
          <inrecipe>uox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>uox_used_fuel_recipe</outrecipe>
        </fuel>
        <fuel>
          <incommodity>mox</incommodity>
          <inrecipe>mox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>mox_used_fuel_recipe</outrecipe>
        </fuel>
        <processtime>1</processtime>
        <nbatches>1</nbatches>
        <batchsize>1</batchsize>
        <refueltime>0</refueltime>
        <initial_condition>
          <core>
            <nbatches>1</nbatches>
            <commodity>mox</commodity>
            <recipe>mox_fuel_recipe</recipe>
          </core>
        </initial_condition>
        <commodity_production>
          <commodity>lwr_power</commodity>
          <capacity>.928</capacity>        <!--GWe-y-->
          <cost>64</cost>        <!--$/kWe-y-->
        </commodity_production>
        <commod_pref>
          <incommodity>mox</incommodity>
          <preference>1.0</preference>
        </commod_pref>
        <pref_change>
          <incommodity>uox</incommodity>
          <new_pref>2.0</new_pref>
          <time>4</time>
        </pref_change>
      </BatchReactor>
    </config>
  </facility>

  <facility>
    <name>Reactor2</name>
    <config>
      <BatchReactor>
        <fuel>
          <incommodity>uox</incommodity>
          <inrecipe>uox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>uox_used_fuel_recipe</outrecipe>
        </fuel>
        <fuel>
          <incommodity>mox</incommodity>
          <inrecipe>mox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>mox_used_fuel_recipe</outrecipe>
        </fuel>
        <processtime>1</processtime>
        <nbatches>1</nbatches>
        <batchsize>1</batchsize>
        <refueltime>0</refueltime>
        <initial_condition>
          <core>
            <nbatches>1</nbatches>
            <commodity>mox</commodity>
            <recipe>mox_fuel_recipe</recipe>
          </core>
        </initial_condition>
        <commodity_production>
          <commodity>lwr_power</commodity>
          <capacity>.928</capacity>        <!--GWe-y-->
          <cost>64</cost>        <!--$/kWe-y-->
        </commodity_production>
        <commod_pref>
          <incommodity>mox</incommodity>
          <preference>1.0</preference>
        </commod_pref>
      </BatchReactor>
    </config>
  </facility>

  <facility>
    <name>Reactor3</name>
    <config>
      <BatchReactor>
        <fuel>
          <incommodity>uox</incommodity>
          <inrecipe>uox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>uox_used_fuel_recipe</outrecipe>
        </fuel>
        <fuel>
          <incommodity>mox</incommodity>
          <inrecipe>mox_fuel_recipe</inrecipe>
          <outcommodity>waste</outcommodity>
          <outrecipe>mox_used_fuel_recipe</outrecipe>
        </fuel>
        <processtime>1</processtime>
        <nbatches>1</nbatches>
        <batchsize>1</batchsize>
        <refueltime>0</refueltime>
        <initial_condition>
          <core>
            <nbatches>1</nbatches>
            <commodity>mox</commodity>
            <recipe>mox_fuel_recipe</recipe>
          </core>
        </initial_condition>
        <commodity_production>
          <commodity>lwr_power</commodity>
          <capacity>.928</capacity>        <!--GWe-y-->
          <cost>64</cost>        <!--$/kWe-y-->
        </commodity_production>
        <commod_pref>
          <incommodity>mox</incommodity>
          <preference>0.5</preference>
        </commod_pref>
      </BatchReactor>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config>
      <NullRegion/>
    </config>
    <institution>
      <name>SingleInstitution</name>
      <config>
        <DeployInst>
          <buildorder>
            <prototype>UOX_Source</prototype>
            <number>1</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>MOX_Source</prototype>
            <number>1</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Reactor1</prototype>
            <number>1</number>
            <date>1</date>
          </buildorder>
          <buildorder>
            <prototype>Reactor2</prototype>
            <number>1</number>
            <date>2</date>
          </buildorder>
          <buildorder>
            <prototype>Reactor3</prototype>
            <number>1</number>
            <date>3</date>
          </buildorder>
        </DeployInst>
      </config>
    </institution>
  </region>

  <recipe>
    <name>natl_u</name>
    <basis>mass</basis>
    <nuclide> <id>922350000</id> <comp>0.711</comp> </nuclide>
    <nuclide> <id>922380000</id> <comp>99.289</comp> </nuclide>
  </recipe>

  <recipe>
    <name>uox_fuel_recipe</name>
    <basis>mass</basis>
    <nuclide> <id>922350000</id> <comp>4.0</comp> </nuclide>
    <nuclide> <id>922380000</id> <comp>96.0</comp> </nuclide>
  </recipe>

