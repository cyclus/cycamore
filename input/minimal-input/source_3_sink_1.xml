<?xml version="1.0"?>
<!-- 1 SourceFacility Source, 1 SinkFacility Sink -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>2</decay>
  </control>

  <commodity>
    <name>commodity</name>
  </commodity>

  <facility>
    <name>Source</name>
    <agent>
      <SourceFacility>
        <output>
          <outcommodity>commodity</outcommodity>
          <output_capacity>1</output_capacity>
          <recipe>commod_recipe</recipe>
        </output>
      </SourceFacility>
    </agent>
    <outcommodity>commodity</outcommodity>
  </facility>
  
  <facility>
    <name>Sink</name>
    <agent>
      <SinkFacility>
        <input>
          <commodities>
            <incommodity>commodity</incommodity>
          </commodities>
          <input_capacity>3</input_capacity>
        </input>
      </SinkFacility>
    </agent>
    <incommodity>commodity</incommodity>
  </facility>

  <region>
    <name>SingleRegion</name>
    <allowedfacility>Source</allowedfacility>
    <allowedfacility>Sink</allowedfacility>
    <agent>
      <NullRegion/>
    </agent>
    <institution>
      <name>SingleInstitution</name>
      <availableprototype>Source</availableprototype>
      <availableprototype>Sink</availableprototype>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>3</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <agent>
        <NullInst/>
      </agent>
    </institution>
  </region>

  <recipe>
    <name>commod_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>010010000</id>
      <comp>1</comp>
    </nuclide>
  </recipe>

</simulation>